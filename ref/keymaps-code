
-- 使用 vim.keymap.set 设置快捷键映射
vim.keymap.set("n", "H", "^", { desc = "Move to the beginning of the line" })
vim.keymap.set("n", "T", "$", { desc = "Move to the end of the line" })

vim.keymap.set("v", "H", "^", { desc = "Move to the beginning of the line" })
vim.keymap.set("v", "T", "$", { desc = "Move to the end of the line" })

