sudo apt install qemu-system qemu-utils
qemu-system-x86_64 -boot menu=on -drive file=image_1.img -drive file=image_2.qcow2 -drive file=/dev/xxx,format=raw -m 4G -cpu host -smp 4 -enable-kvm -net user,hostfwd=tcp::10022-:22 -net nic

# 如果是远程 SSH 开启 QEMU，则需要配置 DISPLAY 环境变量
# 以及使用 sudo -E 保留环境变量运行
export DISPLAY=:10 
sudo -E qemu-...
